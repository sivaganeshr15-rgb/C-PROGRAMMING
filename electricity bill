

#include <stdio.h>

int main() {
    int units;
    float bill_amount = 0;

    printf("Enter the number of units consumed: ");
    scanf("%d", &units);

    if (units <= 100) {
        bill_amount = units * 5;
    } else if (units <= 300) {
        bill_amount = (100 * 5) + ((units - 100) * 7);
    } else {
        bill_amount = (100 * 5) + (200 * 7) + ((units - 300) * 10);
    }

    printf("Total electricity bill: Rs. %.2f\n", bill_amount);

    return 0;
}
